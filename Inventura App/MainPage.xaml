<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:Inventura_App"
       x:Class="Inventura_App.MainPage"
       Shell.NavBarIsVisible="False">

    <TabBar>
        <Tab Title="Home" Icon="home_icon.svg">
            <ShellContent ContentTemplate="{DataTemplate local:HomePage}" />
        </Tab>
        <Tab Title="Products" Icon="product_icon.svg">
            <ShellContent ContentTemplate="{DataTemplate local:ProductsPage}" />
        </Tab>
        <Tab Title="History" Icon="chart_icon.svg">
            <ShellContent ContentTemplate="{DataTemplate local:HistoryPage}" />
        </Tab>
        <Tab Title="Settings" Icon="settings_icon.svg">
            <ShellContent ContentTemplate="{DataTemplate local:SettingsPage}" />
        </Tab>
    </TabBar>
    
</Shell>
