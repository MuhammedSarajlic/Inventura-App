<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Inventura_App.HomePage"
             Title="HomePage"
             Shell.NavBarIsVisible="False">
    <ScrollView Margin="30, 30">
        <StackLayout Spacing="30">
            <HorizontalStackLayout Spacing="120">
                <Label Text="Dashboard" FontSize="Title" FontAttributes="Bold"/>
            </HorizontalStackLayout>
            <HorizontalStackLayout>
                <Frame BackgroundColor="{x:StaticResource Primary}">
                    <StackLayout Spacing="10">
                        <Label Text="Total products" TextColor="White" FontAttributes="Bold" FontSize="Medium"/>
                        <Label Text="213" TextColor="White" FontSize="Large"/>
                    </StackLayout>
                </Frame>
            </HorizontalStackLayout>
        </StackLayout>

    </ScrollView>
</ContentPage>